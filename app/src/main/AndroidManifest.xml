<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.keetmalin.tictactoe_1" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".TwoPlayer_Activity"
            android:label="@string/title_activity_two_player_" >
        </activity>
        <activity
            android:name=".Options_Activity"
            android:label="@string/title_activity_options_" >
        </activity>
        <activity
            android:name=".GameArea_Activity"
            android:label="@string/title_activity_game_area_" >
        </activity>
        <activity
            android:name=".Help_Activity"
            android:label="@string/title_activity_help_" >
        </activity>
        <activity
            android:name=".Difficulty_Activity"
            android:label="@string/title_activity_difficulty_" >
        </activity>
        <activity
            android:name=".MultiplayerMode_Activity"
            android:label="@string/title_activity_multiplayer_mode_" >
        </activity>
        <activity
            android:name=".Splashscreen_Activity"
            android:label="@string/title_activity_splashscreen_"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConnectToADevice_Activity"
            android:label="@string/title_activity_connect_to_adevice_" >
        </activity>
    </application>

</manifest>
